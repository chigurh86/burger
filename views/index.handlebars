<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h1 class="text-center">Burgers To Devour</h1>
      <img class="img-responsive center-block" src="assets/img/burger.jpg" height="200px" width="220px" alt="">
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row">

      <div class="col-md-4">
        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
              <li class="burgerTime">
                <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="id" value="1">
                  <p><span class="label" name="burger-name">Burger:</span> {{this.burger_name}}</p>
                  <p><span class="label" name="devoured">Devoured:</span> {{this.devoured}}</p>
                  <button class="btn btn-* bottom" type="submit">Devour!</button>
                </form>
                <form class="form-inline" action="/{{this.id}}?_method=DELETE" method="POST">
                  <input type="hidden" name="id"><button class="btn btn-* bottom" type="submit">Delete</button>
                </form>
              </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4">
        <form class="form-inline" action="/" method="POST">
          <label for="burg">Burger:</label>
          <input type="text" id="burg" name="burger" value="{{this.id}}">
          <button class="btn btn-* bottom" type="submit">Add Burger</button>
        </form>
      </div>
      <div class="col-md-4">
        <ul>
        {{#each burgers}}
        {{#if this.devoured}}
          <li>
            <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="id" value="1">
              <p><span class="label" name="burger-name">Burger:</span> {{this.burger_name}}</p>
              <p><span class="label" name="devoured">Devoured:</span> {{this.devoured}}</p>
              <button class="btn btn-* bottom" type="submit">Devour!</button>
            </form>
              <form class="form-inline" action="/{{this.id}}?_method=DELETE" method="POST">
                <input type="hidden" name="id">
                <button class="btn btn-* bottom" type="submit">Delete</button>
              </form>
          </li>
      {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>
